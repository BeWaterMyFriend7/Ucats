page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
  color: #888888;
}
.navbar .item.active{
  color: #94070a;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 40rpx;
  right: 40rpx;
  height: 4rpx;
  background: #94070a;
}

.placeholder {
  color: #888888;
  caret-color: #94070a;
}

.copy{
  font-size: 25rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
  margin-top: 14rpx;
  letter-spacing: 5rpx;
  line-height: 55rpx;
  text-align: center;
  font-weight:bold;
  color: #576b95;
}

