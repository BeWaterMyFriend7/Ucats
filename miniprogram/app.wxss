/**app.wxss**/

.itemname1 {
  font-size: 27rpx;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  display: flex;
  color: #888888;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.divLineLong {
  background: #eee;
  height: 3rpx;
  margin-left: 40rpx;
}

.itemname2 {
  font-size: 30rpx;
  color: #353535;
  font-weight: normal;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 45rpx;
  text-align: center;
  margin-top: 14rpx;
  margin-bottom: 14rpx;
  font-weight: bold;
}

.head1 {
  font-size: 35rpx;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  margin-top: 50rpx;
  font-weight: bold;
  color: black;
}

.body {
  font-size: 30rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 30rpx;
  /* margin-top: 14rpx; */
  color: #353535;
  letter-spacing: 5rpx;
  line-height: 55rpx;
  text-align: justify;
  user-select: "true";
}

.circle {
  height: 150rpx;
  /* margin-top: 60rpx;
  margin-bottom: 50rpx; */
  display: flex;
  align-items: center;
  width: 100%;
}

.bodybold {
  font-weight: bold;
}

/* 会徽 */
.board image {
  width: 100%;
  height: 300rpx;
  border-bottom: 1rpx solid #eee;
}


/*每一只猫*/
.catitem {
  height: 105rpx;
  /* margin-top: 30rpx; */
  /* margin-bottom: 30rpx; */
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
}

/*分割线样式*/
.divLine {
  background: #eee;
  height: 3rpx;
  margin-left: 150rpx;
}

/*猫名称*/
.cat-name {
  font-size: 32rpx;
  flex-direction: row;
  margin-left: 150rpx;
  color: #353535;
  text-align: center;
}

.adoption {
  font-size: 32rpx;
  flex-direction: row;
  /* margin-right: 50rpx; */
  color: white;
  justify-content: right;
  text-align: right;
  margin-right: 40rpx;
  background-color: #94070a;
  width: 3em;
}

/*搜索框*/

.search {
  font-size: 32rpx;
  margin-left: 150rpx;
  height: 32rpx;
}

.avator {
  width: 90rpx;
  height: 90rpx;
  margin-left: 40rpx;
  position: absolute;
  align-items: center;
  display: flex;
}

.copy {
  color: #576b95;
  font-weight: bold;
}

.play {
  width: 45rpx;
  height: 45rpx;
  margin-right: 20rpx;
}

.staff {
  font-size: 20rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  line-height: 45rpx;
  margin-bottom: 0rpx;
  margin-top: -10rpx;
  color: #888888;
  text-align: left;
}

.cat_image {
  border-radius: 10rpx;
  overflow: hidden;
}

.cat_video {
  border-radius: 10rpx;
}

.cat-card {
  font-size: 45rpx;
  color: black;
  font-weight: bold;
  justify-content: flex-start;
}

.sound {
  margin-top: 9rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.adContainer {
  width: 100%;
  display: flex;
  justify-content: center;
}

.adContainer ad {
  width: 100%;
}

.edit-input {
  display: block;
  height: 60rpx;
  font-size: 35rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background: none;
  border: none;
  border-bottom: 1px solid #DFDFDF;
  color: #94070a;
  /* width: 100%; */
  margin-top: 10rpx;
}

/* 猫咪详情页编辑按钮 */
.edit-container {
  margin-left: 20rpx;
}

.edit-detail-btn {
  background-color: #576b95;
  color: #ffffff;
  border: 1rpx solid #576b95;
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.edit-detail-btn::after {
  border: none;
}

/* all和colors页面的管理员添加按钮样式 */
.admin-add-container {
  display: flex;
  justify-content: flex-end;
  margin: 20rpx 40rpx;
}

.admin-add-btn {
  background-color: #576b95;
  color: #ffffff;
  border: 1rpx solid #576b95;
  padding: 5rpx 15rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.admin-add-btn::after {
  border: none;
}

/* 按钮图标样式 */
.btn-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* 头像上传样式 */
.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 图片上传样式 */
.image-upload-section {
  margin: 20rpx 0;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.image-actions {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 20rpx;
  display: flex;
  justify-content: space-between;
  padding: 5rpx;
}

.set-cover-btn {
  flex: 1;
  text-align: left;
}

.remove-image-btn {
  flex: 1;
  text-align: right;
  color: #ff4d4f;
}

/* 视频上传样式 */
.video-upload-section {
  margin: 20rpx 0;
}

.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  position: relative;
  width: 200rpx;
  height: 150rpx;
}

.uploaded-video {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.remove-video-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ff4d4f;
  padding: 5rpx;
  border-radius: 5rpx;
  font-size: 20rpx;
}

/* 音频上传样式 */
.audio-upload-section {
  margin: 20rpx 0;
}

.audio-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.audio-info {
  font-size: 28rpx;
}

.remove-audio-btn {
  color: #ff4d4f;
  font-size: 24rpx;
}

/* 通用上传按钮 */
.upload-button {
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ccc;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #999;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 隐藏画布 */
.hidden-canvas {
  position: fixed;
  top: -1000rpx;
  left: -1000rpx;
  width: 500rpx;
  height: 500rpx;
}