/* 头像上传样式 */
.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  overflow: hidden;
  background-color: #fff;
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}

.avatar-placeholder {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  z-index: 1;
}

/* 裁剪器遮罩层 */
.cropper-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
}

/* 图片上传样式 */
.image-upload-section {
  margin: 20rpx 0;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
  background-color: #ffffff;
}

.uploaded-image {
  display: block;
  width: 100% !important;
  height: 100% !important;
  object-fit: contain !important;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fafafa;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: contain;
  background-color: #f5f5f5;
}

.image-actions {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 0 8rpx 0 8rpx;
  padding: 0;
  margin: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.set-cover-btn {
  display: none; /* 暂时隐藏设为首图按钮，只保留删除按钮 */
}

.remove-image-btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 77, 79, 0.9);
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  border-radius: 0 8rpx 0 8rpx;
  transition: all 0.2s ease;
}

.remove-image-btn:hover {
  background: rgba(255, 77, 79, 1);
  transform: scale(1.1);
}

/* 视频上传样式 */
.video-upload-section {
  margin: 20rpx 0;
}

.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  position: relative;
  width: 200rpx;
  height: 150rpx;
}

.uploaded-video {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.remove-video-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ff4d4f;
  padding: 5rpx;
  border-radius: 5rpx;
  font-size: 20rpx;
}

/* 音频上传样式 */
.audio-upload-section {
  margin: 20rpx 0;
}

.audio-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.audio-info {
  font-size: 28rpx;
}

.remove-audio-btn {
  color: #ff4d4f;
  font-size: 24rpx;
}

/* 通用上传按钮 */
.upload-button {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #999;
  background-color: #fafafa;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 隐藏画布 */
.hidden-canvas {
  position: fixed;
  top: -9999px;
  left: -9999px;
}