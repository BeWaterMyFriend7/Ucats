/* 相关猫咪样式 - 每行6个 */
.related-cats-section {
  margin: 20rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.related-cats-container {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  justify-content: flex-start;
}

.related-cat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  width: 95rpx;
  padding: 2rpx;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.related-cat-item:active {
  background-color: #e9ecef;
  transform: scale(0.95);
}

.related-cat-avatar-container {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 5rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.related-cat-avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.related-cat-name {
  font-size: 20rpx;
  color: #333;
  text-align: center;
  line-height: 1.1;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}