/* 头像上传样式 */
.avatar-preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 20rpx auto;
  overflow: hidden;
  background-color: #fff;
  position: relative;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  display: block;
  /* 移除position: absolute，避免黑色背景遮盖问题 */
}

.avatar-placeholder {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  z-index: 1;
}

/* 裁剪器遮罩层 */
.cropper-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
  z-index: 9999;
}

/* 图片上传样式 */
.image-upload-section {
  margin: 20rpx 0;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
  background-color: #ffffff;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #fafafa;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  object-fit: cover;
  background-color: #f5f5f5;
}

.image-actions {
  position: absolute;
  top: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 0 8rpx 0 8rpx;
  padding: 0;
  margin: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.set-cover-btn {
  display: none; /* 暂时隐藏设为首图按钮，只保留删除按钮 */
}

.remove-image-btn {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 0 8rpx 0 8rpx;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.3);
  position: relative;
  overflow: hidden;
}

.remove-image-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.remove-image-btn:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(255, 77, 79, 0.4);
}

.remove-image-btn:active::before {
  left: 100%;
}

.remove-image-btn:hover {
  background: rgba(255, 77, 79, 1);
  transform: scale(1.1);
}

/* 视频上传样式 */
.video-upload-section {
  margin: 20rpx 0;
}

.video-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.video-item {
  position: relative;
  width: 200rpx;
  height: 150rpx;
}

.uploaded-video {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.remove-video-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #ff4d4f;
  padding: 5rpx;
  border-radius: 5rpx;
  font-size: 20rpx;
}

/* 音频上传样式 */
.audio-upload-section {
  margin: 20rpx 0;
}

.audio-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
}

.audio-info {
  font-size: 28rpx;
}

.remove-audio-btn {
  color: #ff4d4f;
  font-size: 24rpx;
}

/* 通用上传按钮 */
.upload-button {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 2rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  color: #999;
  background-color: #fafafa;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 操作按钮组样式 */
.action-buttons-container {
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  border-top: 1rpx solid #dee2e6;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  justify-content: center;
  align-items: center;
}

.submit-btn, .delete-btn {
  flex: 1;
  max-width: 300rpx;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.submit-btn {
  background: linear-gradient(135deg, #28a745, #20c997);
  color: white;
}

.submit-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(40, 167, 69, 0.3);
}

.submit-btn:active::before {
  left: 100%;
}

.delete-btn {
  background: linear-gradient(135deg, #dc3545, #fd7e14);
  color: white;
}

.delete-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.delete-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(220, 53, 69, 0.3);
}

.delete-btn:active::before {
  left: 100%;
}

.btn-icon {
  font-size: 36rpx;
  line-height: 1;
}

.btn-text {
  font-size: 28rpx;
  line-height: 1;
  font-weight: 500;
}

/* 隐藏画布 */
.hidden-canvas {
  position: fixed;
  top: -9999px;
  left: -9999px;
}